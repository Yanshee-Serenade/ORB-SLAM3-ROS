{
	"name": "ORB-SLAM3-ROS Dev",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "../../" 
	},
	"workspaceFolder": "/overlay_ws/src/orb_slam3_ros",
	"remoteUser": "root", 
	"runArgs": [
		"--network=host",
		"--privileged",
		"-v", ".:/overlay_ws/src/orb_slam3_ros"
	],
	"containerEnv": {
		"ROS_HOSTNAME": "orbslam3",
		"ROS_MASTER_URI": "http://orbslam3:11311",
	},

	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.shell.linux": "/bin/bash",
				"python.defaultInterpreterPath": "/usr/bin/python3",
				"python.autoComplete.extraPaths": [
					"/opt/ros/noetic/lib/python3/dist-packages",
					"/overlay_ws/devel/lib/python3/dist-packages"
				],
				"python.analysis.extraPaths": [
					"/opt/ros/noetic/lib/python3/dist-packages",
					"/overlay_ws/devel/lib/python3/dist-packages"
				]
			},
			"extensions": [
				"github.copilot",
				"github.copilot-chat",
				"ms-vscode.cpptools",
				"ranch-hand-robotics.rde-ros-1",
				"ms-vscode.cmake-tools"
			]
		}
	}
}
